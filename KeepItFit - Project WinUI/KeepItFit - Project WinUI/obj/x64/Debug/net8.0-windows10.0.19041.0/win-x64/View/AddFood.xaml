<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="KeepItFit___Project_WinUI.View.AddFood"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepItFit___Project_WinUI.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <DataTemplate x:Key="foodList"                        >
            <Grid x:ConnectionId='3' Background="#FBFBFB" BorderBrush="#999EA5" BorderThickness="0.5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:ConnectionId='4' Grid.Column="0" x:Name="foodCheckBox"                             Padding="30,5,0,0"                                                                    Margin="10,5,10,10" FontSize="15"/>
                <TextBlock Grid.Column="1" Text="Qty" Margin="10,15,10,10" FontWeight="Bold" FontSize="15"/>
                <TextBox x:ConnectionId='5' Grid.Column="2"                                          Margin="10,10,10,10" FontSize="15"                                                                          />
                <TextBlock Grid.Column="3" Text="of" Margin="10,15,10,10" FontSize="15"/>
                <ComboBox x:ConnectionId='6' Grid.Column="4"                                                                                       Margin="10,10,10,10" FontSize="15"/>
                
                <!--Show error if user didn't enter food quantity correctly-->
                <TextBlock x:ConnectionId='7' Grid.Column="4" x:Name="foodQuantityError" Foreground="Red" FontSize="12" 
                                                                              
               Text="Please enter a valid number > 0." 
               Margin="10,0,10,10" HorizontalAlignment="Center"/>   
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <StackPanel>
        <Frame x:ConnectionId='8' Name="MainFrame"/>
        <TextBlock x:ConnectionId='9' x:Name="meal" FontWeight="Bold" FontSize="15" Margin="10, 10, 0, 0" Foreground="#0958A7"/>
        <Line X1="0" Y1="10" X2="1000" Y2="10" Stroke="#D9D9D9" StrokeThickness="2"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Search Our Database" FontWeight="Bold" FontSize="15" Margin="10, 10, 0, 0" Foreground="#000000"/>
            <TextBlock Margin="50, 10, 0, 0">
                <Hyperlink x:ConnectionId='29'                                         >Quickly Add Calories</Hyperlink> <!--This will lead to Quick Add Page-->
            </TextBlock>
        </StackPanel >

        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
            <TextBox x:ConnectionId='27' x:Name="searchBox" PlaceholderText="Search for food"  Width="300" Height="30"                                    />
            <Button x:ConnectionId='28' Content="Search" Foreground="#FFFFFF" FontWeight="Bold"                            Background="#08964F" Margin="10, 0, 0, 0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,50,0,0">
            <Button x:ConnectionId='24' x:Name="RecentButton" FontWeight="Bold" Foreground="#FFFFFF" Width="90" Height="40" FontSize="15" Background="#084F96" Content="Recent"                                            Tag="Recent" Margin="0,0,5,0"/>
            <Button x:ConnectionId='25' x:Name="FrequentButton" FontWeight="Bold" Foreground="#FFFFFF" Width="100" Height="40" FontSize="15" Background="#084F96" Content="Frequency"                                            Tag="Frequency" Margin="0,0,5,0"/>
            <Button x:ConnectionId='26' x:Name="MyFoodButton" FontWeight="Bold" Foreground="#FFFFFF" Width="90" Height="40" FontSize="15" Background="#084F96" Content="My Food"                                            Tag="MyFood" Margin="0,0,5,0"/>
        </StackPanel>

        <Line X1="0" Y1="0" X2="1000" Y2="0" Stroke="#D9D9D9" StrokeThickness="4"/>

        
         <!--List view of Recent-->
        <ListView x:ConnectionId='10' x:Name="foodRecentListView" Margin="10,10,10,10"
                                                                           
                   ItemTemplate="{StaticResource foodList}"
                   Visibility="Collapsed" Height="400">
        </ListView>
        <!--Show anouncement if you haven't add food on "Recent"-->
        <TextBlock x:ConnectionId='11' x:Name="showNoneAnouncementFoodRecent" Visibility="Collapsed" Margin="10,10,10,10" TextWrapping="Wrap" Height="400">
             <Run x:ConnectionId='22' x:Name="firstRunFoodRecent"/>
             <LineBreak/>
             <LineBreak/>
             <Run FontWeight="Bold" Text="TIP:"/>
             <Run x:ConnectionId='23' x:Name="secondRunFoodRecent"
                  Text=" As you enter foods to your food diary, the foods you've 
                  eaten most recently will appear in this list so that you can quickly 
                  add them to your meals."/>    
        </TextBlock>

        
        <!--List view of Frequent-->
        <ListView x:ConnectionId='12' x:Name="foodFrequentListView" Margin="10,10,10,10"
                                                                             
                   ItemTemplate="{StaticResource foodList}"
                   Visibility="Collapsed" Height="400">
        </ListView>
        <!--Show anouncement if you haven't add food on "Frequency"-->
        <TextBlock x:ConnectionId='13' x:Name="showNoneAnouncementFoodFrequent" Visibility="Collapsed" Margin="10,10,10,10" TextWrapping="Wrap" Height="400">
            <Run x:ConnectionId='20' x:Name="firstRunFoodFrequent"/>
            <LineBreak/>
            <LineBreak/>
            <Run FontWeight="Bold" Text="TIP:"/>
            <Run x:ConnectionId='21' x:Name="secondRunFoodFrequent"/>   
        </TextBlock>

        
        <!--List view of My Food-->
        <ListView x:ConnectionId='14' x:Name="foodMyFoodListView" Margin="10,10,10,10"
                                                                    
            ItemTemplate="{StaticResource foodList}"
            Visibility="Collapsed" Height="400">
        </ListView>
        <!--Show anouncement if you haven't add food on "My Food"-->
        <TextBlock x:ConnectionId='15' x:Name="showNoneAnouncementFoodFMyFood" Visibility="Collapsed" Margin="10,10,10,10" TextWrapping="Wrap" Height="400">
             <Run x:ConnectionId='18' x:Name="firstRunFoodMyFood" Text="You have not created any personal foods yet."/>
             <LineBreak/>
             <LineBreak/>
             <Run FontWeight="Bold" Text="TIP:"/>
             <Run x:ConnectionId='19' x:Name="secondRunFoodMyFood" 
                 Text=" If you cannot find a food in the database, you can create your own personal food. Foods that you create will appear in this list for easy access."/>
        </TextBlock>

        
        


        <!--Add Checked and Delete Button-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:ConnectionId='16' x:Name="addCheckedButton" Content="Add Checked" Foreground="#FFFFFF" FontWeight="Bold" 
                 Width="120" Height="40" FontSize="15" 
                 Background="#08964F"                          Margin="10,10,0,0"/>

            <Button x:ConnectionId='17' x:Name="deleteItemsButton" Content="Delete From The List" Foreground="#FFFFFF" FontWeight="Bold" 
                 Width="200" Height="40" FontSize="15" 
                 Background="#08964F"                           Margin="100,10,0,0"/>
        </StackPanel>
       

    </StackPanel>
</Page>

