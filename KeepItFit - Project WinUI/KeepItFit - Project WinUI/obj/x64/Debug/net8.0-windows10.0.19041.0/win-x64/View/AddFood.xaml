<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="KeepItFit___Project_WinUI.View.AddFood"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepItFit___Project_WinUI.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="foodList"                        >
            <Grid x:ConnectionId='3' Background="#F0F0F0" BorderBrush="Beige" BorderThickness="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:ConnectionId='4' Grid.Column="0" x:Name="foodCheckBox"                             Padding="30,5,0,0"  Margin="10,5,10,10" FontSize="15"/>
                <TextBlock x:ConnectionId='5' Grid.Column="1"                              Margin="10,10,10,10" FontSize="15"/>
                <TextBlock x:ConnectionId='6' Grid.Column="2"                          Margin="10,10,10,10" FontSize="15"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <StackPanel Background="White">
        <Frame x:ConnectionId='7' Name="MainFrame"/>
        <TextBlock x:ConnectionId='8' x:Name="meal" FontWeight="Bold" FontSize="15" Margin="10, 10, 0, 0" Foreground="#0958A7"/>
        <Line X1="0" Y1="10" X2="1000" Y2="10" Stroke="#D9D9D9" StrokeThickness="2"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Search Our Database" FontWeight="Bold" FontSize="15" Margin="10, 10, 0, 0" Foreground="#000000"/>
            <TextBlock Margin="50, 10, 0, 0">
                <Hyperlink x:ConnectionId='19'                                         >Quickly Add Calories</Hyperlink> <!--This will lead to Quick Add Page-->
            </TextBlock>
        </StackPanel >

        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
            <TextBox x:ConnectionId='17' x:Name="searchBox" PlaceholderText="Search for food"  Width="300" Height="30"/>
            <Button x:ConnectionId='18' Content="Search" Foreground="#FFFFFF" FontWeight="Bold"                            Background="#08964F" Margin="10, 0, 0, 0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,50,0,0">
            <Button x:ConnectionId='13' FontWeight="Bold" Foreground="#FFFFFF" Width="90" Height="40" FontSize="15" Background="#084F96" Content="Recent"                      Tag="Recent" Margin="0,0,5,0"/>
            <Button x:ConnectionId='14' FontWeight="Bold" Foreground="#FFFFFF" Width="100" Height="40" FontSize="15" Background="#084F96" Content="Frequency"                      Tag="Frequency" Margin="0,0,5,0"/>
            <Button x:ConnectionId='15' FontWeight="Bold" Foreground="#FFFFFF" Width="90" Height="40" FontSize="15" Background="#084F96" Content="My Food"                      Tag="MyFood" Margin="0,0,5,0"/>
            <Button x:ConnectionId='16' FontWeight="Bold" Foreground="#FFFFFF" Width="90" Height="40" FontSize="15" Background="#084F96" Content="Meal"                      Tag="Meal" Margin="0,0,15,0"/>
        </StackPanel>
        
        <Line X1="0" Y1="0" X2="1000" Y2="0" Stroke="#D9D9D9" StrokeThickness="2"/>

        <!--List view of Recent-->
        <ItemsControl x:ConnectionId='9' x:Name="foodRecentListView" Margin="10,10,10,10"
                                                                      
              ItemTemplate="{StaticResource foodList}"
              Visibility="Collapsed">
        </ItemsControl>

        <!--List view of Frequent-->
        <ItemsControl x:ConnectionId='10' x:Name="foodFrequentListView" Margin="10,10,10,10"
                                                                         
               ItemTemplate="{StaticResource foodList}"
               Visibility="Collapsed">
        </ItemsControl>

        <!--List view of My Food-->
        <ItemsControl x:ConnectionId='11' x:Name="foodMyFoodListView" Margin="10,10,10,10"
                                                                   
           ItemTemplate="{StaticResource foodList}"
           Visibility="Collapsed">
        </ItemsControl>
        
        <!--List view of Meal-->
        <ItemsControl x:ConnectionId='12' x:Name="foodMealListView" Margin="10,10,10,10"
                                                                 
           ItemTemplate="{StaticResource foodList}"
           Visibility="Collapsed">
        </ItemsControl>

    </StackPanel>
</Page>

