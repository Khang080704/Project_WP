<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="KeepItFit___Project_WinUI.FoodDiary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepItFit___Project_WinUI.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Enabled">
    
    <Page.Resources>
        <!-- Converter zone-->
        <local:ValueToColorConverter x:Key="ColorConverter"/>

        <!-- >>>>>>>>>>>>>>>>>>>>>>>Label template <<<<<<<<<<<<<<<<<<<< -->
        <DataTemplate x:Key="Nutrition_Lable"                              >
            <StackPanel x:ConnectionId='17'>
                <Border Background="#0000FF" Width="80" Height="auto" 
                        BorderThickness="3" >
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:ConnectionId='18'                      FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                        </TextBlock>
                        <TextBlock x:ConnectionId='19'                      FontWeight="Bold" Foreground="LightGray"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                </Border>
            </StackPanel>
        </DataTemplate>
        <!-- >>>>>>>>>>>>>>>>>>>>>>>Label template <<<<<<<<<<<<<<<<<<<< -->

        
        <!-- Meal template-->
        <DataTemplate x:Key="meal"                         >
            <StackPanel x:ConnectionId='12' Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:ConnectionId='15' Foreground="#0000FF" Margin="10 0 10 10"
                               FontSize="15" FontWeight="Bold"
                                                       >
                    </TextBlock>
                    
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:ConnectionId='13' Margin="5 0 0 0" Foreground="#0000FF"                               >Add Food</TextBlock>
                    <TextBlock Foreground="#0000FF" Margin="5 0 5 0"> |</TextBlock>
                    <TextBlock x:ConnectionId='14' Margin="5 0 0 0" Foreground="#0000FF"                                   >
                        Quick Tools
                    </TextBlock>
                </StackPanel>
                <Line Stroke="SteelBlue"
                      X1="0" Y1="0"
                      X2="800" Y2="0"
                      StrokeThickness="2" Margin="0 10 0 10"/>
            </StackPanel>
        </DataTemplate>
        <!-- Meal template-->
        
        
        <DataTemplate x:Key="Nutrition_Data"                              >
            <Border x:ConnectionId='9' Grid.Row="0" Grid.Column="1" Background="LightGray" Width="80"
                    BorderThickness="3">
                <TextBlock x:ConnectionId='10'                       FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
        </DataTemplate>


        <!-- >>>>>>>>>>>>>>>>> Template for table <<<<<<<<<<<<<<<<<<<-->
        <DataTemplate x:Key="Nutrition_Table"                              >
            <Grid x:ConnectionId='3'>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Nutrition total-->
                <Border Grid.Row="0" Grid.Column="1" Background="LightGray" Width="80"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='7'                       FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>

                <!-- Nutrition Daily-->
                <Border Grid.Row="1" Grid.Column="1" Background="LightGray" Width="80"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='6'                       FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>
                
                <!-- Nutrition remain
                    remain = total - daily-->
                <Border Grid.Row="2" Grid.Column="1" Background="LightGray" Width="80"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='5'                        FontWeight="Bold" HorizontalAlignment="Center"
                                                                                                     />
                </Border>

                <!-- Nutrition Label-->
                <Border Grid.Row="3" Grid.Column="1" Background="#0000FF" Width="80" Height="30"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='4'                      FontWeight="Bold" HorizontalAlignment="Center"
                   Foreground="White" 
                   VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </DataTemplate>
        <!-- >>>>>>>>>>>>>>>>> Template for table <<<<<<<<<<<<<<<<<<<-->

        <!-- >>>>>>>>>>>>>>>>>> Format for ItemResource <<<<<<<<<<<<<<<<-->
        <ItemsPanelTemplate x:Key="HorizalFormat">
            <StackPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
        <!-- >>>>>>>>>>>>>>>>>> Format for ItemResource <<<<<<<<<<<<<<<<-->
    </Page.Resources>

    <!-- Main content-->
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"
             Width="auto" Height="auto">
        <!-- Calendar infor-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Foreground="#0000FF" Margin="10 10 10 10"
                    FontSize="15" FontWeight="Bold">
             Your exercise Daily for
            </TextBlock>
            <Button>
                <FontIcon Glyph="&#xE76B;"/>
            </Button>
            <CalendarDatePicker Width="200" PlaceholderText="Pick a date"/>
            <Button>
                <FontIcon Glyph="&#xE76C;"/>
            </Button>
        </StackPanel>
        <Line Stroke="SteelBlue"
           X1="0" Y1="0"
           X2="800" Y2="0"
           StrokeThickness="2" Margin="0 10 0 10"/>

        <!-- Nutritions Label MVVM-->
        <ItemsControl x:ConnectionId='20'                                       
                      ItemTemplate="{StaticResource Nutrition_Lable}"
                      ItemsPanel="{StaticResource HorizalFormat}"
                      HorizontalAlignment="Right"
                      Name="Nutrion_list">

        </ItemsControl>
        
        <!-- Meal information-->
        <ItemsControl x:ConnectionId='21' Name="mealInfor"
                                                           
                      ItemTemplate="{StaticResource meal}">
                      
        </ItemsControl>
        
        <!-- Summary Table-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel Orientation="Vertical" Margin="0 0 20 0">
                <TextBlock HorizontalAlignment="Right" Text="Total" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Margin="0 10 0 0" HorizontalAlignment="Right" Text="Your Daily Goal" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Margin="0 10 0 0" HorizontalAlignment="Right" Text="Remaining" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
            </StackPanel>

            <!-- Calculate nutritions-->
            <ItemsControl x:ConnectionId='23'                                       
              ItemTemplate="{StaticResource Nutrition_Table}"
              ItemsPanel="{StaticResource HorizalFormat}">

            </ItemsControl>
        </StackPanel>
        
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="20">
        When you're done logging your food and exercise for that day, click here:
        </TextBlock>

        <Button Background="green" Margin="10" HorizontalAlignment="Center">
            <TextBlock Foreground="White">
            Finish this entry
            </TextBlock>
        </Button>
        <!-- End-->

        <Frame x:ConnectionId='22' x:Name="HomeFoodFrame"/>
    </StackPanel>

</Page>

