<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="KeepItFit___Project_WinUI.FoodPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="using:KeepItFit___Project_WinUI.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="meal"                         >
            <TextBlock x:ConnectionId='8'                         />
        </DataTemplate>

        <DataTemplate x:Key="nutrionList"                              >
            <Border x:ConnectionId='3' BorderBrush="Black" BorderThickness="0 0 0 1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:ConnectionId='4' FontWeight="Bold" TextAlignment="left" Margin="15"
                               FontSize="20"                     
                               Grid.Row="0" Grid.Column="0"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1"
                                HorizontalAlignment="Right">
                        <TextBox x:ConnectionId='5' Background="#084F96"                                                                        FontWeight="Bold"
                                 Foreground="White" Height="30" PlaceholderText="0"
                                 TextAlignment="left"/>
                        <TextBlock x:ConnectionId='6'                      FontWeight="Bold" 
                                   Foreground="Black" VerticalAlignment="Center"
                                   Margin="10" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>
                    
            </Border>
        </DataTemplate>
    </Page.Resources>

    <StackPanel Orientation="Vertical">
        <TextBlock Foreground="#0958A7" FontSize="20"
                   Margin="10" FontWeight="Bold">
            Quick add
        </TextBlock>

        <Border BorderBrush="Black" BorderThickness="0,0,0,2">
            <Grid>
                <!-- Content for meal -->
                <TextBlock FontWeight="Bold" TextAlignment="Left" Margin="15"
                   VerticalAlignment="Center" Grid.Column="0" 
                   FontSize="25">
                       Meal name
                </TextBlock>
                <!-- Button for meal-->
                <ComboBox x:ConnectionId='12' PlaceholderText="Breakfast" Width="150" Background="#084F96"
                  PlaceholderForeground="White" Grid.Column="1" Grid.Row="0"
                  HorizontalAlignment="Right"
                  Margin="15" Foreground="White" FontWeight="Bold"
                                                        
                  ItemTemplate="{StaticResource meal}"
                  Name="mealList"/>
            </Grid>
        </Border>
        
        <!-- Calories table -->
        <ItemsControl x:ConnectionId='9'                                            
                      ItemTemplate="{StaticResource nutrionList}">

        </ItemsControl>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Button x:ConnectionId='10' Width="120" Height="50" FontWeight="Bold"                     >
                Cancel
            </Button>
            <Button x:ConnectionId='11' Name="AddJournal" Background="Green" Foreground="White"
                    Width="150" Height="50" FontWeight="Bold"                         >
                Add to Journal
            </Button>
        </StackPanel>
    </StackPanel>

</Page>

