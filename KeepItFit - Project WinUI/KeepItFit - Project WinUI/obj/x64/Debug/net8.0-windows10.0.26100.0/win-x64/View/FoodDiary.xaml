<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="KeepItFit___Project_WinUI.FoodDiary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepItFit___Project_WinUI.Model"
    xmlns:uc ="using:KeepItFit___Project_WinUI.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.Resources>
        <!-- Converter zone-->
        <uc:ValueToColorConverter x:Key="ColorConverter"/>

        <!-- >>>>>>>>>>>>>>>>>>>>>>>Label template <<<<<<<<<<<<<<<<<<<< -->
        <DataTemplate x:Key="Nutrition_Lable"                              >
            <StackPanel x:ConnectionId='22'>
                <Border Background="#0000FF" Width="80" Height="auto" 
                        BorderThickness="3">
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:ConnectionId='23'                      FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                        </TextBlock>
                        <TextBlock x:ConnectionId='24'                      FontWeight="Bold" Foreground="LightGray"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                </Border>
            </StackPanel>
        </DataTemplate>
        <!-- >>>>>>>>>>>>>>>>>>>>>>>Label template <<<<<<<<<<<<<<<<<<<< -->

        
        <DataTemplate x:Key="Nutrition_Data"                              >
            <Border x:ConnectionId='19' Grid.Row="0" Grid.Column="1" Background="LightGray" Width="80"
                    BorderThickness="3">
                <TextBlock x:ConnectionId='20'                       FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
        </DataTemplate>


        <!-- >>>>>>>>>>>>>>>>> Template for table <<<<<<<<<<<<<<<<<<<-->
        <DataTemplate x:Key="Nutrition_Table"                              >
            <Grid x:ConnectionId='13'>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Nutrition total-->
                <Border Grid.Row="0" Grid.Column="1" Background="LightGray" Width="80"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='17'                                                                         FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>

                <!-- Nutrition Daily-->
                <Border Grid.Row="1" Grid.Column="1" Background="LightGray" Width="80"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='16'                       FontWeight="Bold" HorizontalAlignment="Center"/>
                </Border>
                
                <!-- Nutrition remain
                    remain = total - daily-->
                <Border Grid.Row="2" Grid.Column="1" Background="LightGray" Width="80"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='15'                                                                         FontWeight="Bold" HorizontalAlignment="Center"
                                                                                                                  />
                </Border>

                <!-- Nutrition Label-->
                <Border Grid.Row="3" Grid.Column="1" Background="#0000FF" Width="80" Height="30"
                        BorderThickness="3">
                    <TextBlock x:ConnectionId='14'                      FontWeight="Bold" HorizontalAlignment="Center"
                   Foreground="White" 
                   VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </DataTemplate>
        <!-- >>>>>>>>>>>>>>>>> Template for table <<<<<<<<<<<<<<<<<<<-->
        
        <!-- Template for data pass from another screen-->
        <DataTemplate x:Key="DataForm"                                      >
            <Grid x:ConnectionId='3'>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='4'                      HorizontalAlignment="Left"
                           Grid.Row="0" Grid.Column="0"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            Grid.Row="0" Grid.Column="1">
                    <Border Background="LightGray" Width="80" Height="auto" BorderThickness="3">
                        <TextBlock x:ConnectionId='11' FontSize="15"                              
                                   TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <Border Background="LightGray" Width="80" Height="auto" BorderThickness="3">
                        <TextBlock x:ConnectionId='10' Margin="5" FontSize="15"                           
                                   TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="LightGray" Width="80" Height="auto" BorderThickness="3">
                        <TextBlock x:ConnectionId='9' Margin="5" FontSize="15"                         
                                   TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="LightGray" Width="80" Height="auto" BorderThickness="3">
                        <TextBlock x:ConnectionId='8' Margin="5" FontSize="15"                             
                                   TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="LightGray" Width="80" Height="auto" BorderThickness="3">
                        <TextBlock x:ConnectionId='7' Margin="5" FontSize="15"                            
                                   TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border Background="LightGray" Width="80" Height="auto" BorderThickness="3">
                        <TextBlock x:ConnectionId='6' Margin="5" FontSize="15"                           
                                   TextAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Button x:ConnectionId='5' Name="Delete"                                     >X</Button>
                </StackPanel>
            </Grid>
        </DataTemplate>
        

        <!-- >>>>>>>>>>>>>>>>>> Format for ItemResource <<<<<<<<<<<<<<<<-->
        <ItemsPanelTemplate x:Key="HorizalFormat">
            <StackPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="VerticalFormat">
            <StackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>
        <!-- >>>>>>>>>>>>>>>>>> Format for ItemResource <<<<<<<<<<<<<<<<-->
    </Page.Resources>

    <!-- Main content-->
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"
             Width="auto" Height="auto">
        <!-- Calendar infor-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Foreground="#0000FF" Margin="10 10 10 10"
                    FontSize="15" FontWeight="Bold">
             Your food Daily for
            </TextBlock>

            <CalendarDatePicker x:ConnectionId='41' Width="200" PlaceholderText="Pick a date"
                                                                       />

        </StackPanel>
        <Line Stroke="SteelBlue"
           X1="0" Y1="0"
           X2="800" Y2="0"
           StrokeThickness="2" Margin="0 10 0 10"/>

        <!-- Nutritions Label MVVM-->
        <ItemsControl x:ConnectionId='25'                                                 
                      ItemTemplate="{StaticResource Nutrition_Lable}"
                      ItemsPanel="{StaticResource HorizalFormat}"
                      HorizontalAlignment="Right"
                      Name="Nutrion_list"
                      Margin="0 0 33 0">

        </ItemsControl>
        
        <!-- Meal information-->
        <ScrollView Height="350" Width="auto" IsTabStop="True">
            <!-- BreakFast-->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="#0000FF" Margin="10 0 10 10"
                            FontSize="15" FontWeight="Bold"
                            Text="BreakFast">
                        </TextBlock>

                    </StackPanel>
                    <ItemsControl x:ConnectionId='38'                                                              
                                ItemTemplate="{StaticResource DataForm}"
                                ItemsPanel="{StaticResource VerticalFormat}"
                                Name="BreakFast_data">
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='39' Name="BreakFast" Margin="5 0 0 0" Foreground="#0000FF" 
                                                                     >
                            Add Food
                            
                        </TextBlock>
                        <TextBlock Foreground="#0000FF" Margin="5 0 5 0"> |</TextBlock>
                        <TextBlock x:ConnectionId='40' Name="_BreakFast" Margin="5 0 0 0" Foreground="#0000FF"                                   >
                            Quick Tools
                        </TextBlock>
                    </StackPanel>
                    <Line Stroke="SteelBlue"
                        X1="0" Y1="0"
                        X2="800" Y2="0"
                        StrokeThickness="2" Margin="0 10 0 10"/>
                </StackPanel>

                <!-- Lunch-->
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="#0000FF" Margin="10 0 10 10"
                                FontSize="15" FontWeight="Bold"
                                Text="Lunch">
                        </TextBlock>

                    </StackPanel>

                    <ItemsControl x:ConnectionId='35'                                                          
                                ItemTemplate="{StaticResource DataForm}"
                                ItemsPanel="{StaticResource VerticalFormat}"
                                Name="Lunch_data">
                    </ItemsControl>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='36' Name="Lunch" Margin="5 0 0 0" Foreground="#0000FF"                               >Add Food</TextBlock>
                        <TextBlock Foreground="#0000FF" Margin="5 0 5 0"> |</TextBlock>
                        <TextBlock x:ConnectionId='37' Name="_Lunch" Margin="5 0 0 0" Foreground="#0000FF"                                   >
                            Quick Tools
                        </TextBlock>
                    </StackPanel>
                    <Line Stroke="SteelBlue"
                        X1="0" Y1="0"
                        X2="800" Y2="0"
                        StrokeThickness="2" Margin="0 10 0 10"/>
                </StackPanel>

                <!-- Dinner-->
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="#0000FF" Margin="10 0 10 10"
                            FontSize="15" FontWeight="Bold"
                            Text="Dinner">
                        </TextBlock>

                    </StackPanel>
                    <ItemsControl x:ConnectionId='32'                                                           
                        ItemTemplate="{StaticResource DataForm}"
                        Name="Dinner_data">

                    </ItemsControl>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='33' Name="Dinner" Margin="5 0 0 0" Foreground="#0000FF"                               >Add Food</TextBlock>
                        <TextBlock Foreground="#0000FF" Margin="5 0 5 0"> |</TextBlock>
                        <TextBlock x:ConnectionId='34' Name="_Dinner" Margin="5 0 0 0" Foreground="#0000FF"                                   >
                            Quick Tools
                        </TextBlock>
                    </StackPanel>
                    <Line Stroke="SteelBlue"
                        X1="0" Y1="0"
                        X2="800" Y2="0"
                        StrokeThickness="2" Margin="0 10 0 10"/>
                </StackPanel>

                <!-- Snacks-->
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="#0000FF" Margin="10 0 10 10"
                            FontSize="15" FontWeight="Bold"
                            Text="Snacks">
                        </TextBlock>

                    </StackPanel>
                    <ItemsControl x:ConnectionId='29'                                                          
                        ItemTemplate="{StaticResource DataForm}"
                        Name="Snacks_data">

                    </ItemsControl>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='30' Name="Snacks" Margin="5 0 0 0" Foreground="#0000FF"                               >Add Food</TextBlock>
                        <TextBlock Foreground="#0000FF" Margin="5 0 5 0"> |</TextBlock>
                        <TextBlock x:ConnectionId='31' Name="_Snacks" Margin="5 0 0 0" Foreground="#0000FF"                                   >
                            Quick Tools
                        </TextBlock>
                    </StackPanel>
                    <Line Stroke="SteelBlue"
                        X1="0" Y1="0"
                        X2="800" Y2="0"
                        StrokeThickness="2" Margin="0 10 0 10"/>
                </StackPanel>
            </StackPanel>
        </ScrollView>

        

        <!-- Summary Table-->
        <StackPanel Margin="0 15 0 0" Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel Orientation="Vertical" Margin="0 0 20 0">
                <TextBlock HorizontalAlignment="Right" Text="Total" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Margin="0 10 0 0" HorizontalAlignment="Right" Text="Your Daily Goal" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Margin="0 10 0 0" HorizontalAlignment="Right" Text="Remaining" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
            </StackPanel>

            <!-- Calculate nutritions-->
            <ItemsControl x:ConnectionId='28'                                                 
              ItemTemplate="{StaticResource Nutrition_Table}"
              ItemsPanel="{StaticResource HorizalFormat}">

            </ItemsControl>
        </StackPanel>
        
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="20">
        When you're done logging your food and exercise for that day, click here:
        </TextBlock>

        <Button x:ConnectionId='26' Foreground="White" Background="green" Margin="10" HorizontalAlignment="Center"                     >
            <TextBlock  FontWeight="Bold">
            Finish this entry
            </TextBlock>
        </Button>
        <!-- End-->

        <Frame x:ConnectionId='27' x:Name="HomeFoodFrame"/>
    </StackPanel>

</Page>

