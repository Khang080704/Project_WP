<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="KeepItFit___Project_WinUI.View.CreateMyFood"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepItFit___Project_WinUI.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="nutrionList"                              >
            <Border x:ConnectionId='3' BorderBrush="Black" BorderThickness="0 0 0 1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:ConnectionId='4' FontWeight="Bold" TextAlignment="Right" Margin="15"
                           FontSize="20"                     
                           Grid.Row="0" Grid.Column="0"/>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1"
                            HorizontalAlignment="Right">
                        
                        <!--Print Error if input didn't meet the quality-->
                        <TextBlock x:ConnectionId='6'  Text="Invalid input" VerticalAlignment="Center" Foreground="Red"                                                    Grid.Row="1" Grid.Column="1"/>
                        
                        <TextBox x:ConnectionId='7' Background="#084F96"                                                                        FontWeight="Bold"
                             Foreground="White" Height="30" PlaceholderText="0"
                             TextAlignment="left"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                        <TextBlock x:ConnectionId='5'                      FontWeight="Bold" 
                            Foreground="Black" VerticalAlignment="Center"
                            Margin="10" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

            </Border>
        </DataTemplate>
    </Page.Resources>

    <StackPanel>
        <TextBlock Foreground="#0000FF" Margin="10 10 10 10"
               FontSize="20" FontWeight="Bold">
        Create My Food
        </TextBlock>
        <Line Stroke="SteelBlue"
            X1="0" Y1="0"
            X2="800" Y2="0"
            StrokeThickness="2" Margin="0 10 0 15"/>

        <Border BorderBrush="Black" BorderThickness="0 0 0 1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontWeight="Bold" TextAlignment="Right" Margin="15"
                   FontSize="20" Text="Food Name"
                   Grid.Row="0" Grid.Column="0"/>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1"
                    HorizontalAlignment="Right">
                    <!--Print Error if Name didn't meet the quality-->
                    <TextBlock x:ConnectionId='10' x:Name="FoodNameError" VerticalAlignment="Center" Text="Please enter a valid food name." Foreground="Red" Visibility="Collapsed" Grid.Row="1" Grid.Column="1"/>
                    <TextBox x:ConnectionId='11' Background="#084F96"                                                                                     FontWeight="Bold"
                     Foreground="White" Width="400"  Height="30" PlaceholderText="Your Name"
                     TextAlignment="left"/>
                </StackPanel>
            </Grid>
        </Border>

        <ItemsControl x:ConnectionId='8'                                            
              ItemTemplate="{StaticResource nutrionList}"/>

        <Button x:ConnectionId='9' Name="Create" Content="Create" Foreground="#FFFFFF" FontWeight="Bold"
                Background="#08964F" Margin="10" HorizontalAlignment="Center"
                                    />
    </StackPanel>
</Page>

