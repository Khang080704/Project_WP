<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="KeepItFit___Project_WinUI.ExercisePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepItFit___Project_WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="790" Height="530" Background="White">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Foreground="#0000FF" Margin="10 10 10 10"
                       FontSize="15" FontWeight="Bold">
                Your exercise Daily for
            </TextBlock>
            <Button>
                <FontIcon Glyph="&#xE76B;"/>
            </Button>
            <CalendarDatePicker Width="200" PlaceholderText="Pick a date"/>
            <Button>
                <FontIcon Glyph="&#xE76C;"/>
            </Button>
        </StackPanel>
        <Line Stroke="SteelBlue"
              X1="0" Y1="0"
              X2="800" Y2="0"
              StrokeThickness="2" Margin="40"/>

    </StackPanel>

</Page>
